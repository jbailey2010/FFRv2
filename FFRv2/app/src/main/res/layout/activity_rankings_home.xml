<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Add the ActionBar -->
        <include
            layout="@layout/main_tool_bar"
            android:id="@+id/rankings_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:id="@+id/rankings_search_base"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/rankings_tool_bar"
            android:background="@color/toolbar_background"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/ranking_search"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="7dp"
                android:hint="Search"
                android:textColor="#dedede"
                android:textColorHint="#dedede"
                android:textSize="13sp"
                android:background="@drawable/rounded_well" />
        </RelativeLayout>

        <!-- Set the Main content -->
        <include layout="@layout/content_rankings"
            android:layout_below="@+id/rankings_search_base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rankings_button_bar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/rankings_button_bar"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/rankings_draft_info"
                android:background="@color/player_info_buttons"
                style="?android:buttonBarStyle"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="Draft Info"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/rankings_comparator"
                android:background="@color/player_info_buttons"
                style="?android:buttonBarStyle"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="Compare Players"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/rankings_sort"
                android:background="@color/player_info_buttons"
                style="?android:buttonBarStyle"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="Sort Players"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/rankings_simulator"
                android:background="@color/player_info_buttons"
                style="?android:buttonBarStyle"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="ADP Simulator"/>
        </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/toolbar_items"
        app:headerLayout="@layout/nav_header_user"
        app:menu="@menu/activity_user_drawer" />

</android.support.v4.widget.DrawerLayout>
